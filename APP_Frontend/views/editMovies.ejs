<title>My movies | Edit movie</title>
<% include ('./partials/nav') %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-edit"></i> Edit movie</h1>
      <%- include ('./partials/messages') %>
      <form action="/movies/movie/<%= movie.id %>" method="POST" id="updateMovie">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            value="<%= movie.movieName %>"
          />
        </div>

        <div class="form-group">
          <label for="cast">Cast</label>
          <input
            type="text"
            id="cast"
            name="cast"
            class="form-control"
            value="<%= movie.cast %>"
          />
        </div>

        <div class="form-group">
          <label for="releaseDate">Release Data</label>
          <input
            type="datetime-local"
            id="releaseDate"
            name="releaseDate"
            class="form-control"
            value="<%= new Date(movie.releaseDate).toISOString().replace(/.\d..\d+Z$/g, "") %>"
          />
        </div>
        <div class="form-group">
          <label for="genre">Genre</label>
          <input
            type="text"
            id="genre"
            name="genre"
            class="form-control"
            value="<%= movie.genre %>"
          />
        </div>
        <div class="form-group">
          <label for="rating">Rating</label>
          <select name="rating" id="rating" class="form-control">
            <option value="<%= movie.rating %>" selected>
              <%= movie.rating%>
            </option>

            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
      </form>

      <div style="display: block ruby; margin-top: 4%">
        <div>
          <form action="/movies">
            <button type="submit" class="btn btn-info">Back</button>
          </form>
        </div>
        <div style="float: right; display: block ruby">
          <form action="/movies/movie/del/<%= movie.id %>">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
          <button type="submit" form="updateMovie" class="btn btn-primary">
            Save
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
