<title>My movies | Add movie </title>
<% include ('./partials/nav') %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="far fa-plus-square"></i> Add movie </h1>
            <%- include ('./partials/messages') %>
            <form action="/movies/movie" method="POST" id="addMovie">
                <div class="form-group">
                    <label for="name">Movie Name</label>
                    <input type="text" id="name" name="name" class="form-control" 
                        placeholder="Enter movie's Name" 
                        value="<%= typeof movie != 'undefined' ? movie.movieName : '' %>"/>
                </div>

                <div class="form-group">
                    <label for="cast">Cast</label>
                    <input type="text" id="cast" name="cast" class="form-control"
                        placeholder="Enter movie's cast" 
                        value="<%= typeof movie != 'undefined' ? movie.cast : '' %>"/>
                </div>

                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input type="text" id="genre" name="genre" class="form-control"
                        placeholder="Enter movie's genre" 
                        value="<%= typeof movie != 'undefined' ? movie.genre : '' %>"/>
                </div>
                <div class="form-group">
                    <label for="releaseDate">Release Data</label>
                    <input type="datetime-local" id="releaseDate" name="releaseDate" class="form-control"
                        placeholder="Enter movie's Release Data" 
                        value="<%= typeof movie != 'undefined' ? movie.releaseDate : '' %>"/>
                </div>
                <div class="form-group">
                    <label for="rating">Rating</label>
                    <select name="rating" id="rating" class="form-control">
                        <% if(typeof movie == 'undefined' || movie.rating == '') { %>
                        <option value="" selected hidden>Rate your movie</option>
                        <% } else { %>
                        <option value="<%= movie.rating %>" selected disabled hidden> 
                                <%= movie.rating%>
                        <% } %>        
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
            </form>

            <div style="display: block ruby; margin-top: 4%">     
                    <div >
                        <form action="/movies" >
                            <button type="submit" class="btn btn-info ">Back</button>
                        </form>
                    </div> 
                    <div style="float: right; display: block ruby">
                        <button type="submit" form="addMovie" class="btn btn-primary ">Add</button>
                    </div>
            
                </div>



        </div>




    </div>
</div>
</div>